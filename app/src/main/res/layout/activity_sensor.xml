<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yarde.light_p.SensorActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/repord_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="107dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="61dp"
        android:onClick="onClick"
        android:text="Report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dataReceived" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="173dp"
        android:layout_height="32dp"
        android:layout_marginEnd="105dp"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="105dp"
        android:layout_marginStart="106dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_change" />

    <TextView
        android:id="@+id/dataReceived"
        android:layout_width="173dp"
        android:layout_height="32dp"
        android:layout_marginEnd="105dp"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="105dp"
        android:layout_marginStart="106dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_click" />

    <TextView
        android:id="@+id/on_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="144dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="117dp"
        android:text="@string/on_change"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/on_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="178dp"
        android:layout_marginLeft="106dp"
        android:layout_marginRight="178dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="39dp"
        android:text="@string/on_Click"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
